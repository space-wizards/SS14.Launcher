<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:login="clr-namespace:SS14.Launcher.ViewModels.Login"
             xmlns:loc="clr-namespace:SS14.Launcher.Localization"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SS14.Launcher.Views.Login.ExpiredLoginView">

  <Design.DataContext>
    <login:ExpiredLoginViewModel />
  </Design.DataContext>

  <DockPanel LastChildFill="False">
    <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Top" Classes="NanoHeadingMedium" Text="{loc:Loc login-expired-title}" />

    <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" TextAlignment="Center" Margin="0, 10, 0, 0"
               Text="{loc:Loc login-expired-message}" />

    <TextBox DockPanel.Dock="Top" Name="NameBox" MaxWidth="300" Margin="0, 10, 0, 0"
             Text="{Binding Account.Username}" IsEnabled="False" />

    <TextBox DockPanel.Dock="Top" Name="PasswordBox" MaxWidth="300" Margin="0, 4, 0, 0" Watermark="{loc:Loc login-expired-message}"
             Text="{Binding Password}" PasswordChar="â€¢" />

    <DockPanel DockPanel.Dock="Top" LastChildFill="False" MaxWidth="300" Margin="0 20 0 0">
      <Button DockPanel.Dock="Right" HorizontalAlignment="Center"
              Content="{loc:Loc login-expired-button-log-in}" Command="{Binding OnLogInButtonPressed}"
              IsEnabled="{Binding Password, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
              IsDefault="True" />

      <Button DockPanel.Dock="Left" HorizontalAlignment="Center"
              Content="{loc:Loc login-expired-button-log-out}" Command="{Binding OnLogOutButtonPressed}" />
    </DockPanel>

    <DockPanel DockPanel.Dock="Top" LastChildFill="False" MaxWidth="300">
      <Button DockPanel.Dock="Left" HorizontalAlignment="Center"
              Content="{loc:Loc login-expired-button-forgot-password}" Command="{Binding ParentVM.SwitchToForgotPassword}" IsEnabled="{Binding !Busy}" />
    </DockPanel>
  </DockPanel>

</UserControl>
