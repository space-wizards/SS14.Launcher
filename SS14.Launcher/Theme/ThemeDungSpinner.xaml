<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SS14.Launcher.Views">
  <Style Selector="views|DungSpinner">
    <Setter Property="Fill">
      <Setter.Value>
        <SolidColorBrush Color="#e23229" />
      </Setter.Value>
    </Setter>
  </Style>
  <Style Selector="views|DungSpinner:active">
    <Style.Animations>
      <Animation Duration="0:0:1.5" IterationCount="INFINITE">
        <KeyFrame Cue="0%">
          <Setter Property="AnimationProgress" Value="0" />
        </KeyFrame>
        <KeyFrame Cue="100%">
          <Setter Property="AnimationProgress" Value="1" />
        </KeyFrame>
      </Animation>
    </Style.Animations>
  </Style>
  <Style Selector="Viewbox.DungSpinnerBox">
    <Setter Property="Width" Value="72" />
    <Setter Property="Height" Value="72" />
    <Setter Property="HorizontalAlignment" Value="Center" />
  </Style>
</Styles>
